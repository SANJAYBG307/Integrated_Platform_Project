# AI Productivity Platform Environment Configuration
# Copy this file to .env and update the values for your environment

# Basic Django Settings
DEBUG=True
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-long-and-random
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DB_NAME=Integrated_Platform
DB_USER=Saas_User
DB_PASSWORD=Saas@123
DB_HOST=localhost
DB_PORT=3306

# Redis Configuration
REDIS_URL=redis://localhost:6379/1
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# AI Configuration (REQUIRED)
OPENAI_API_KEY=your-openai-api-key-here
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=150
AI_TEMPERATURE=0.7

# Email Configuration (Optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# AWS S3 Configuration (Optional - for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1
USE_S3=False

# Sentry Configuration (Optional - for error monitoring)
SENTRY_DSN=your-sentry-dsn-here

# Security Settings (Production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging Level
LOG_LEVEL=INFO

# Development Settings
DJANGO_SETTINGS_MODULE=ai_productivity_platform.settings

# Celery Configuration
CELERY_TASK_ALWAYS_EAGER=False
CELERY_TASK_EAGER_PROPAGATES=True

# Cache Configuration
CACHE_TTL=3600

# Rate Limiting
RATELIMIT_ENABLE=True
RATELIMIT_USE_CACHE=default

# Feature Flags
ENABLE_AI_FEATURES=True
ENABLE_ANALYTICS=True
ENABLE_NOTIFICATIONS=True

# Performance Settings
DATABASE_CONN_MAX_AGE=60
DATABASE_POOL_SIZE=20

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_S3_BUCKET=your-backup-bucket

# Monitoring
ENABLE_HEALTH_CHECKS=True
ENABLE_METRICS=True