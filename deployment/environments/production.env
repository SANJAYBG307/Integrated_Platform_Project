# AI Productivity Platform - Production Environment Configuration

# Basic Django Settings
DEBUG=False
SECRET_KEY=your-super-secure-production-secret-key-change-this
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Database Configuration (MySQL)
DB_NAME=Integrated_Platform
DB_USER=Saas_User
DB_PASSWORD=secure-production-password-change-this
DB_HOST=db
DB_PORT=3306

# Redis Configuration
REDIS_URL=redis://:redis_password_123@redis:6379/1
CELERY_BROKER_URL=redis://:redis_password_123@redis:6379/0
CELERY_RESULT_BACKEND=redis://:redis_password_123@redis:6379/0

# AI Configuration (REQUIRED)
OPENAI_API_KEY=your-production-openai-api-key-here
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=150
AI_TEMPERATURE=0.7

# Email Configuration (Production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key

# AWS S3 Configuration (Production)
AWS_ACCESS_KEY_ID=your-production-aws-access-key
AWS_SECRET_ACCESS_KEY=your-production-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-production-bucket-name
AWS_S3_REGION_NAME=us-east-1
USE_S3=True

# Sentry Configuration (Production - for error monitoring)
SENTRY_DSN=your-production-sentry-dsn

# Security Settings (Production)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# CORS Settings
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Logging Level
LOG_LEVEL=INFO

# Production Settings
DJANGO_SETTINGS_MODULE=ai_productivity_platform.settings

# Celery Configuration
CELERY_TASK_ALWAYS_EAGER=False
CELERY_TASK_EAGER_PROPAGATES=False

# Cache Configuration
CACHE_TTL=3600

# Rate Limiting
RATELIMIT_ENABLE=True
RATELIMIT_USE_CACHE=default

# Feature Flags
ENABLE_AI_FEATURES=True
ENABLE_ANALYTICS=True
ENABLE_NOTIFICATIONS=True

# Performance Settings
DATABASE_CONN_MAX_AGE=300
DATABASE_POOL_SIZE=20

# Production Tools
ENABLE_DEBUG_TOOLBAR=False
ENABLE_SILK_PROFILING=False

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_S3_BUCKET=your-backup-bucket

# Monitoring
ENABLE_HEALTH_CHECKS=True
ENABLE_METRICS=True

# CDN Configuration
CDN_URL=https://cdn.your-domain.com

# Session Configuration
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True